<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ethan.Paginas.Listado">
    <StackLayout>
        <Label Text="Listado de Personas" HorizontalOptions="Center"></Label>
        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="Descripcion"></Label>
                            <Label x:Name="Monto"></Label>
                            <Label x:Name="Fecha"></Label>
                            <Label x:Name="Foto"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
    
</ContentPage>